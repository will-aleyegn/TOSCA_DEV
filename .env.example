# TOSCA Medical Laser Control System - Environment Configuration
# Copy this file to .env and fill in the appropriate values
# NEVER commit .env to version control

# =======================
# Application Settings
# =======================
APP_ENV=development  # development, testing, production
LOG_LEVEL=DEBUG  # DEBUG, INFO, WARNING, ERROR, CRITICAL

# =======================
# Database
# =======================
DATABASE_PATH=data/laser_control.db

# =======================
# Hardware Configuration
# =======================

# Arroyo Laser Controller (Serial)
LASER_SERIAL_PORT=COM3
LASER_BAUD_RATE=9600
LASER_TIMEOUT=1.0

# Xeryon Linear Actuator
ACTUATOR_CONNECTION_STRING=usb://...
ACTUATOR_MAX_POSITION=100.0
ACTUATOR_MIN_POSITION=0.0

# Allied Vision Camera (VmbPy)
CAMERA_ID=DEV_...
CAMERA_EXPOSURE_TIME=10000
CAMERA_GAIN=1.0

# FT232H GPIO - Device 1 (Footpedal & Smoothing Device)
FT232H_DEVICE_1_INDEX=0
FOOTPEDAL_PIN=C0
SMOOTHING_DEVICE_PIN=C1

# FT232H GPIO - Device 2 (Photodiode ADC)
FT232H_DEVICE_2_INDEX=1
PHOTODIODE_ADC_CHANNEL=0
PHOTODIODE_VOLTAGE_MAX=5.0

# =======================
# Safety Configuration
# =======================
SAFETY_MAX_POWER_WATTS=2.0
SAFETY_WATCHDOG_TIMEOUT_MS=500
SAFETY_PHOTODIODE_MIN_VOLTAGE=0.1
SAFETY_PHOTODIODE_MAX_VOLTAGE=4.9

# =======================
# Session Recording
# =======================
VIDEO_RECORDING_ENABLED=true
VIDEO_RECORDING_PATH=data/sessions
VIDEO_CODEC=MJPG
VIDEO_FPS=30
VIDEO_RESOLUTION=1920x1080

# =======================
# Development/Testing
# =======================
# Set to true to simulate hardware for development without physical devices
SIMULATE_HARDWARE=false
