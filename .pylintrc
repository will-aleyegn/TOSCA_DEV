[MASTER]
ignore=venv,.venv,build,dist
jobs=1

[MESSAGES CONTROL]
disable=
    C0103,
    C0114,
    R0913,
    R0801

[FORMAT]
max-line-length=100
indent-string='    '

[BASIC]
good-names=i,j,k,x,y,z,id,db

[DESIGN]
max-args=7
max-attributes=10
max-locals=15
max-returns=6
max-branches=12
max-statements=50

[SIMILARITIES]
min-similarity-lines=4
ignore-comments=yes
ignore-docstrings=yes
